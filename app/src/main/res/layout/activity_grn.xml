<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Grn">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbargrn"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4682b4"
        >

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/toolbargrn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listshowgrn"
        android:scrollbars="vertical"
        >

    </android.support.v7.widget.RecyclerView>
    <ImageView
        android:layout_below="@id/listshowgrn"
        android:id="@+id/noresult_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/noresultfound"

        />
    <ImageView
        android:id="@+id/nodata"
        android:layout_below="@+id/noresult_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        />
</RelativeLayout>