<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:background="@color/gen_white"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="1.01"
        android:orientation="vertical">
        <TextView
            android:id="@+id/partno_dialog_project"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Part1"
            android:textSize="18dp"
            android:textColor="@color/gen_white"
            android:background="#4682b4"
            android:gravity="center"

            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
        <TextView
            android:id="@+id/description1scan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Part1"
            android:textSize="15dp"
            android:paddingLeft="10dp"


            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <TextView
            android:id="@+id/weightscan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Part1"
            android:textSize="15dp"
            android:paddingLeft="10dp"


            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <TextView
            android:id="@+id/pricescan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Part1"
            android:textSize="15dp"
            android:paddingLeft="10dp"


            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <TextView
            android:id="@+id/customnoscan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Part1"
            android:textSize="15dp"
            android:paddingLeft="10dp"

            />




    </LinearLayout>

    <LinearLayout android:id="@+id/layout_address_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:weightSum="2"
        android:elevation="30sp">
        <TextView android:id="@+id/txtback"
            android:layout_width="0sp"
            android:layout_marginRight="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange_light"
            android:text="Back"
            android:textSize="14sp"

            android:textColor="@color/gen_white"
            android:textStyle="bold"
            android:gravity="center"/>


        <Button android:id="@+id/btn_Add_dialog"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4682b4"
            android:text="OK"
            android:textSize="14sp"
            android:textColor="@color/gen_white"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>